<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.SettingActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12sp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                app:cardBackgroundColor="@color/border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App Setting"
                        android:textColor="@color/light"
                        android:fontFamily="@font/airbnb" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@id/darkSwitch"
                            android:fontFamily="@font/airbnb"
                            android:text="Enable dark mode"
                            android:textSize="16sp"
                            android:textColor="@color/dark" />

                        <com.github.angads25.toggle.widget.LabeledSwitch
                            android:id="@+id/darkSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_alignParentEnd="true"
                            app:on="false"
                            app:textOff="OFF"
                            app:textOn="ON"
                            app:colorOn="@color/light"
                            app:colorOff="@color/border"
                            app:colorBorder="@color/light"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@id/darkSwitch"
                        android:fontFamily="@font/airbnb"
                        android:text="Color Palette"
                        android:textSize="16sp"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/dark" />

                    <com.thebluealliance.spectrum.SpectrumPalette
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/colorPicker"
                        android:layout_marginVertical="8dp"
                        app:spectrum_autoPadding="true"
                        android:layout_gravity="center"
                        app:spectrum_colors="@array/color_picker"
                        app:spectrum_columnCount="6" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Routines Setting"
                        android:textColor="@color/light"
                        android:fontFamily="@font/airbnb" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@id/time24Switch"
                            android:fontFamily="@font/airbnb"
                            android:text="Show 24h time"
                            android:textColor="@color/dark"
                            android:textSize="16sp" />

                        <com.github.angads25.toggle.widget.LabeledSwitch
                            android:id="@+id/time24Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_alignParentEnd="true"
                            app:on="false"
                            app:textOff="OFF"
                            app:textOn="ON"
                            app:colorOn="@color/light"
                            app:colorOff="@color/border"
                            app:colorBorder="@color/light"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Us"
                        android:textColor="@color/light"
                        android:fontFamily="@font/airbnb" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:strokeWidth="0dp"
                        android:layout_marginTop="10sp"
                        app:cardCornerRadius="8sp"
                        app:cardBackgroundColor="@color/border"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toLeftOf="@id/send"
                                android:layout_alignParentStart="true"
                                android:paddingVertical="12sp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email : example@gmail.com"
                                    android:textColor="@color/dark"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/airbnb" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Your 1 sentence is something to us"
                                    android:textSize="16sp"
                                    android:layout_marginTop="5sp"
                                    android:fontFamily="@font/airbnb" />

                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/send"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="8sp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                app:cardElevation="0sp">

                                <ImageView
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:layout_margin="10sp"
                                    android:src="@drawable/send" />

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/round_commit_24"
                        android:layout_gravity="center" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:strokeWidth="0dp"
                        app:cardCornerRadius="8sp"
                        app:cardBackgroundColor="@color/border"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toLeftOf="@id/instagram"
                                android:layout_alignParentStart="true"
                                android:paddingVertical="12sp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Follow us @example"
                                    android:textColor="@color/dark"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/airbnb" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Your 1 follow help us to motivate"
                                    android:textSize="16sp"
                                    android:layout_marginTop="5sp"
                                    android:fontFamily="@font/airbnb" />

                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/instagram"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="8sp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                app:cardElevation="0sp">

                                <ImageView
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:layout_margin="10sp"
                                    android:src="@drawable/instagram" />

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAQs"
                        android:textColor="@color/light"
                        android:fontFamily="@font/airbnb" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account"
                        android:textColor="@color/light"
                        android:fontFamily="@font/airbnb" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/light"
                        android:fontFamily="@font/airbnb"
                        android:backgroundTint="@color/text"
                        android:text="Logout" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/airbnb"
                        android:backgroundTint="@color/red"
                        android:text="Delete all data(irreversible)" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>