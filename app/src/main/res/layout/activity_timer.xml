<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.TimerActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottomBar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardCornerRadius="8sp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/light"
                app:cardElevation="02dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/now"
                        android:textColor="@color/text_white"
                        android:fontFamily="@font/airbnb" />

                    <TextView
                        android:id="@+id/minutesSchedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="10 mint scheduled."
                        android:textSize="18sp"
                        android:textColor="@color/text_white"
                        android:fontFamily="@font/airbnb" />

                    <TextView
                        android:id="@+id/clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="09:37 min."
                        android:textSize="26sp"
                        android:layout_marginVertical="10sp"
                        android:textColor="@color/yellow"
                        android:textStyle="bold"
                        android:fontFamily="@font/baloo" />

                    <TextView
                        android:id="@+id/stepName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Steps"
                        android:textSize="20sp"
                        android:textColor="@color/text_white"
                        android:textStyle="bold"
                        android:fontFamily="@font/airbnb" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginTop="10sp"
                        app:trackCornerRadius="12sp"
                        android:progress="0"
                        app:indicatorColor="@color/yellow"
                        app:trackThickness="16dp"
                        app:trackColor="@color/text"
                        android:background="@drawable/round_bg" />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15sp"
                app:cardCornerRadius="8sp"
                app:cardBackgroundColor="@color/border"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/next_step"
                        android:fontFamily="@font/airbnb" />

                    <TextView
                        android:id="@+id/nextStep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Now"
                        android:textSize="20sp"
                        android:textColor="@color/dark"
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/airbnb" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info"
                android:layout_margin="15dp"
                android:fontFamily="@font/airbnb" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/routine_finished_approximately_at"
                    android:textSize="18sp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/dark"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@id/finishTime"
                    android:fontFamily="@font/airbnb" />

                <TextView
                    android:id="@+id/finishTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="4:34 pm"
                    android:layout_alignParentEnd="true"
                    android:textSize="18sp"
                    android:textColor="@color/light"
                    android:fontFamily="@font/airbnb" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:paddingHorizontal="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remaining_steps"
                    android:textSize="18sp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/dark"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@id/remaining_steps"
                    android:fontFamily="@font/airbnb" />

                <TextView
                    android:id="@+id/remaining_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2"
                    android:layout_alignParentEnd="true"
                    android:textSize="18sp"
                    android:textColor="@color/light"
                    android:fontFamily="@font/airbnb" />

            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/resetTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8sp"
                android:layout_margin="15dp"
                app:cardElevation="0sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reset_timer"
                        android:textSize="16sp"
                        android:padding="10sp"
                        android:gravity="center"
                        android:drawablePadding="12sp"
                        android:drawableStart="@drawable/arrow_rotate_right"
                        android:textColor="@color/dark"
                        android:fontFamily="@font/airbnb" />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="12sp"
        android:layout_above="@id/adView"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="0dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="10sp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/startPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:layout_marginHorizontal="10sp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12sp">

                    <ImageView
                        android:id="@+id/startPauseIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/play" />

                    <TextView
                        android:id="@+id/startPauseText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Start"
                        android:layout_marginTop="6sp"
                        android:fontFamily="@font/airbnb" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/text"
                app:tint="@color/light"
                android:src="@drawable/check" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:layout_marginHorizontal="10sp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:src="@drawable/arrow_right" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/skip"
                        android:layout_marginTop="6sp"
                        android:fontFamily="@font/airbnb" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/AD_Banner_ID">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>