<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    app:strokeColor="@color/text"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_marginEnd="6sp"
                android:layout_weight="1"
                android:background="@drawable/round_bg" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_marginEnd="6sp"
                android:layout_weight="1"
                android:background="@drawable/round_bg" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_marginEnd="6sp"
                android:layout_weight="1"
                android:background="@drawable/round_bg" />

            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_marginEnd="6sp"
                android:layout_weight="1"
                android:background="@drawable/round_bg" />

            <View
                android:id="@+id/view5"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_marginEnd="6sp"
                android:layout_weight="1"
                android:background="@drawable/round_bg" />

            <View
                android:id="@+id/view6"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_marginEnd="6sp"
                android:layout_weight="1"
                android:background="@drawable/round_bg" />

            <View
                android:id="@+id/view7"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_bg" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/totalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:drawableStart="@drawable/time_square"
                android:drawablePadding="10sp"
                android:fontFamily="@font/baloo"
                android:gravity="center"
                tools:text="00:00h"
                android:textColor="@color/light"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/totalStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:drawableStart="@drawable/menu"
                android:drawablePadding="10sp"
                android:fontFamily="@font/baloo"
                android:gravity="center"
                tools:text="1 step"
                android:textColor="@color/light"
                android:textSize="16sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/airbnb"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textStyle="bold"
            tools:text="Morning Routine"
            android:textColor="@color/black"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/airbnb"
            android:layout_marginTop="10sp"
            tools:text="@string/routines"
            android:textColor="@color/grey"
            android:textSize="16sp" />

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>