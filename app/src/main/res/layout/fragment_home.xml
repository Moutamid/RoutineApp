<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6sp"
        android:layout_marginVertical="12sp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6sp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:strokeColor="@color/border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/airbnb"
                    android:gravity="center"
                    android:textColor="@color/light"
                    android:textSize="16sp"
                    android:text="Mon" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6sp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:strokeColor="@color/border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/airbnb"
                    android:gravity="center"
                    android:textColor="@color/light"
                    android:textSize="16sp"
                    android:text="Tue" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/wednessday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6sp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:strokeColor="@color/border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/airbnb"
                    android:gravity="center"
                    android:textColor="@color/light"
                    android:textSize="16sp"
                    android:text="Wed" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6sp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:strokeColor="@color/border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/airbnb"
                    android:gravity="center"
                    android:textColor="@color/light"
                    android:textSize="16sp"
                    android:text="Thu" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6sp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:strokeColor="@color/border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/airbnb"
                    android:gravity="center"
                    android:textColor="@color/light"
                    android:textSize="16sp"
                    android:text="Fri" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6sp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:strokeColor="@color/border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/airbnb"
                    android:gravity="center"
                    android:textColor="@color/light"
                    android:textSize="16sp"
                    android:text="Sat" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:strokeColor="@color/border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/airbnb"
                    android:gravity="center"
                    android:textColor="@color/light"
                    android:textSize="16sp"
                    android:text="Sun" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <TextView
        android:id="@+id/tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seperator"
        android:layout_marginStart="12sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo"
        android:gravity="center_vertical"
        tools:text="Today routines"
        android:textColor="@color/dark"
        android:textSize="32sp" />


    <Button
        android:id="@+id/inCompleted"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12sp"
        android:drawableEnd="@drawable/download"
        android:drawablePadding="10sp"
        android:textSize="14sp"
        android:fontFamily="@font/airbnb"
        android:text="Incompleted Tasks\t" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/routineRC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/routine_card" />

    <Button
        android:id="@+id/completed"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12sp"
        android:drawableEnd="@drawable/download"
        android:drawablePadding="10sp"
        android:textSize="14sp"
        android:fontFamily="@font/airbnb"
        android:text="Completed Tasks\t" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/routineRCCompleted"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/routine_card" />

</LinearLayout>