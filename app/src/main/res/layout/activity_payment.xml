<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.PaymentActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unleash the Full Experience"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:fontFamily="@font/airbnb"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ad-Free and Premium Features Await!"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/airbnb"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginVertical="12sp"
                android:background="@color/border" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pros of becoming a member"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/airbnb"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pro_desc"
                android:textSize="15sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/airbnb"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/monthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/light"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/border">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Supercharge Your Experience with Our"
                            android:textColor="?attr/colorPrimary"
                            android:fontFamily="@font/airbnb" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10sp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/airbnb"
                                android:layout_weight="1"
                                android:text="Monthly Subscription"
                                android:textColor="@color/dark"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$12.00 / month"
                                android:textColor="?attr/colorPrimary"
                                android:fontFamily="@font/airbnb" />

                        </LinearLayout>

                    </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/lifetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/border">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Elevate Your Experience with a"
                            android:textColor="?attr/colorPrimary"
                            android:fontFamily="@font/airbnb" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10sp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/airbnb"
                                android:layout_weight="1"
                                android:text="Lifetime Subscription"
                                android:textColor="@color/dark"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$99.99 / month"
                                android:textColor="?attr/colorPrimary"
                                android:fontFamily="@font/airbnb" />

                        </LinearLayout>

                    </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>