<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.SettingActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@id/adView"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12sp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                app:cardBackgroundColor="@color/border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12sp">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_setting"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="@font/airbnb" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@id/darkSwitch"
                            android:fontFamily="@font/airbnb"
                            android:text="@string/enable_dark_mode"
                            android:textSize="16sp"
                            android:textColor="@color/dark" />

                        <com.github.angads25.toggle.widget.LabeledSwitch
                            android:id="@+id/darkSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_alignParentEnd="true"
                            app:on="false"
                            app:textOff="OFF"
                            app:textOn="ON"
                            app:colorOn="?attr/colorPrimary"
                            app:colorOff="@color/border"
                            app:colorBorder="?attr/colorPrimary"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@id/darkSwitch"
                        android:fontFamily="@font/airbnb"
                        android:text="@string/color_palette"
                        android:textSize="16sp"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/dark" />

                    <com.thebluealliance.spectrum.SpectrumPalette
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/colorPicker"
                        android:layout_marginVertical="8dp"
                        app:spectrum_autoPadding="true"
                        android:layout_gravity="center"
                        app:spectrum_colors="@array/color_picker"
                        app:spectrum_columnCount="6" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12sp"
                        app:strokeWidth="0dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/border">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/languageTile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/change_language"
                                android:textColor="?attr/colorPrimary"
                                android:fontFamily="@font/airbnb" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/languageTile"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10sp"
                                android:fontFamily="@font/airbnb"
                                android:text="@string/default_language"
                                android:textColor="@color/dark"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/defaultLanguage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/languageTile"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10sp"
                                android:fontFamily="@font/airbnb"
                                android:text="Color Palette"
                                android:textSize="14sp" />

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12sp">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/routines_setting"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="@font/airbnb" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@id/time24Switch"
                            android:fontFamily="@font/airbnb"
                            android:text="@string/show_24h_time"
                            android:textColor="@color/dark"
                            android:textSize="16sp" />

                        <com.github.angads25.toggle.widget.LabeledSwitch
                            android:id="@+id/time24Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_alignParentEnd="true"
                            app:on="false"
                            app:textOff="OFF"
                            app:textOn="ON"
                            app:colorOn="?attr/colorPrimary"
                            app:colorOff="@color/border"
                            app:colorBorder="?attr/colorPrimary"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                app:strokeWidth="0dp"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/border">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_toLeftOf="@id/credit"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/remove_ads"
                            android:textColor="?attr/colorPrimary"
                            android:fontFamily="@font/airbnb" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/airbnb"
                            android:text="@string/go_pro"
                            android:layout_marginTop="10sp"
                            android:textColor="@color/dark"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8sp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        app:cardElevation="0sp">

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_margin="10sp"
                            android:src="@drawable/credit_cards_payment" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12sp">

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="@font/airbnb" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:strokeWidth="0dp"
                        android:layout_marginTop="10sp"
                        app:cardCornerRadius="8sp"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/border"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toLeftOf="@id/send"
                                android:layout_alignParentStart="true"
                                android:paddingVertical="12sp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/email_example_gmail_com"
                                    android:textColor="@color/dark"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/airbnb" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/your_1_sentence_is_something_to_us"
                                    android:textSize="16sp"
                                    android:layout_marginTop="5sp"
                                    android:fontFamily="@font/airbnb" />

                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/send"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="8sp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                app:cardElevation="0sp">

                                <ImageView
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:layout_margin="10sp"
                                    android:src="@drawable/send" />

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/round_commit_24"
                        android:layout_gravity="center" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:strokeWidth="0dp"
                        android:clickable="true"
                        app:cardCornerRadius="8sp"
                        app:cardBackgroundColor="@color/border"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toLeftOf="@id/instagram"
                                android:layout_alignParentStart="true"
                                android:paddingVertical="12sp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/follow_us_example"
                                    android:textColor="@color/dark"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/airbnb" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/your_1_follow_help_us_to_motivate"
                                    android:textSize="16sp"
                                    android:layout_marginTop="5sp"
                                    android:fontFamily="@font/airbnb" />

                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/instagram"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="8sp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                app:cardElevation="0sp">

                                <ImageView
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:layout_margin="10sp"
                                    android:src="@drawable/instagram" />

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12sp">

                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/faqs"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="@font/airbnb" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/faq1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        app:strokeWidth="0dp"
                        app:cardCornerRadius="10sp"
                        app:cardBackgroundColor="@color/border"
                        app:cardElevation="0sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12sp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/how_to_duplicate_a_routine"
                                android:textColor="?attr/colorPrimary"
                                android:fontFamily="@font/airbnb" />

                            <TextView
                                android:id="@+id/faq1Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1. Swipe the routine card to the side\n2. Tap on 'duplicate routine'\n3. Confirm"
                                android:layout_marginTop="5sp"
                                android:visibility="gone"
                                android:fontFamily="@font/airbnb" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/faq2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        app:strokeWidth="0dp"
                        app:cardCornerRadius="10sp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/border"
                        app:cardElevation="0sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12sp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="I'm having problems wih the notifications"
                                android:textColor="?attr/colorPrimary"
                                android:fontFamily="@font/airbnb" />

                            <TextView
                                android:id="@+id/faq2Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1. Swipe the routine card to the side\n2. Tap on 'duplicate routine'\n3. Confirm"
                                android:layout_marginTop="5sp"
                                android:visibility="gone"
                                android:fontFamily="@font/airbnb" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/faq3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        app:strokeWidth="0dp"
                        app:cardCornerRadius="10sp"
                        app:cardBackgroundColor="@color/border"
                        app:cardElevation="0sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12sp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="How to edit a routine?"
                                android:textColor="?attr/colorPrimary"
                                android:fontFamily="@font/airbnb" />

                            <TextView
                                android:id="@+id/faq3Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1. Tap on the routine\n2. Tap on the Edit Button\n3. Edit your routine\n4. Save changes"
                                android:layout_marginTop="5sp"
                                android:visibility="gone"
                                android:fontFamily="@font/airbnb" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/faq4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        app:strokeWidth="0dp"
                        app:cardCornerRadius="10sp"
                        app:cardBackgroundColor="@color/border"
                        app:cardElevation="0sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12sp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Can I reorder tasks while doing a routine?"
                                android:textColor="?attr/colorPrimary"
                                android:fontFamily="@font/airbnb" />

                            <TextView
                                android:id="@+id/faq4Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not yet, but you can use the 'Push task to the end' button to go to the next task and do the current task later."
                                android:layout_marginTop="5sp"
                                android:visibility="gone"
                                android:fontFamily="@font/airbnb" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/faq5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        app:strokeWidth="0dp"
                        app:cardCornerRadius="10sp"
                        app:cardBackgroundColor="@color/border"
                        app:cardElevation="0sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12sp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Where are already completed routines?"
                                android:textColor="?attr/colorPrimary"
                                android:fontFamily="@font/airbnb" />

                            <TextView
                                android:id="@+id/faq5Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not yet, but you can use the 'Push task to the end' button to go to the next task and do the current task later."
                                android:layout_marginTop="5sp"
                                android:visibility="gone"
                                android:fontFamily="@font/airbnb" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/faq6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        app:strokeWidth="0dp"
                        app:cardCornerRadius="10sp"
                        app:cardBackgroundColor="@color/border"
                        app:cardElevation="0sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12sp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="I can't see the routine somebody has shared with me"
                                android:textColor="?attr/colorPrimary"
                                android:fontFamily="@font/airbnb" />

                            <TextView
                                android:id="@+id/faq6Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Please tap the link again and make sure Routine App is open in the background. If that doesn't work, please reach out to me at example@gmail.com"
                                android:layout_marginTop="5sp"
                                android:visibility="gone"
                                android:fontFamily="@font/airbnb" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8sp"
                app:cardElevation="0sp"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12sp">

                    <TextView
                        android:id="@+id/text12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="@font/airbnb" />

                    <Button
                        android:id="@+id/logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="@font/airbnb"
                        android:backgroundTint="@color/text"
                        android:text="Logout" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/text_white"
                        android:fontFamily="@font/airbnb"
                        android:backgroundTint="@color/red"
                        android:text="Delete all data(irreversible)" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/AD_Banner_ID">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>